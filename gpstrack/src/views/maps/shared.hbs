<h4>This is a repository of all users shared routes</h4>
<div class="row">
  {{#each routes}}
  <div class="col-md-6 mb-3">
    <div class="card">
      <div class="card-body">
        <h2>{{start}} -- {{end}}</h2>
        <div class="col-md-6">
          <h6>{{date}}</h6>
        </div>
        <!-- DELETE REQUEST -->
        
        <form action="/routes/delete/{{id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
        </form>
        
        <form action="/routes/see/{{id}}" method="GET">
          <button type="submit" class="btn btn-success btn-block btn-sm">See Route</button>
        </form>
        
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{user.name}}</h1>
      <p clsss="lead">There are no shared Routes yet.</p>
    </div>
  </div>
  {{/each}}
</div>